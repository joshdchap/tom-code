<h1>Listing loans</h1>

<table>
  <tr>
    <th>Loan Amount</th>
    <th>Agent</th>
    <th>Customer</th>
    <th>Address</th>
    <th colspan="3"></th>
  </tr>

<% @loans.each do |loan| %>
  <tr>
    <td><%= number_to_currency(loan.amount) %></td>
    <td><%= loan.agent.blank? ? "Not Specified" : loan.agent.name %></td>
    <td><%= loan.customer.blank? ? "Not Specified" : loan.customer.name %></td>
    <td><%= loan.address %></td>
    <td><%= link_to 'Show', loan %></td>
    <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
    <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Loan', new_loan_path %>
